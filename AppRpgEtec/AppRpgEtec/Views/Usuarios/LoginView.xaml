<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRpgEtec.Views.Usuarios.LoginView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Digite seu Email" FontSize="Medium" FontAttributes="Bold" Margin="40,40,40,0"></Label>
            <Entry Placeholder="Email" Text ="{Binding Login}" Margin="40,0,40,40"></Entry>

            <Label Text="Digite a senha" FontSize="Medium" FontAttributes="Bold" Margin="40,0,40,0"></Label>
            <Entry Placeholder="Senha" IsPassword="True" Text="{Binding Senha}" Margin="40,0,40,0"></Entry>

            <Button Text="Entrar" Command="{Binding EntrarCommand}" Margin="40,40,40,0" BackgroundColor="#F55050" TextColor="#FFFFFF" CornerRadius="15"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>